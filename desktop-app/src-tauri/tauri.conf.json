{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SANKEY Copier",
  "version": "1.0.0",
  "identifier": "com.sankey.copier.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "powershell -Command \"New-Item -ItemType Directory -Path 'dist' -Force | Out-Null; Set-Content -Path 'dist/index.html' -Value '<!DOCTYPE html><html><head><title>SANKEY Copier</title></head><body>Loading...</body></html>'\"",
    "frontendDist": "dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": [
      "resources/web-ui/**"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "SANKEY Copier",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
